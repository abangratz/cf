= form_for([:administration, @page]) do |f|
  - if @page.errors.any?
    #error_explanation
      %h2
        = pluralize(@page.errors.count, "error")
        prohibited this page from being saved:
      %ul
        - @page.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.check_box :in_menu
    = f.label :in_menu, "Show in Menu"
    %br/
  .field
    = f.label :body
    %br/
    = f.text_area :body, :rows => 25, :cols => 90
  .actions
    = f.submit
