= form_for([:administration, @user]) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :nickname
    %br/
    = f.text_field :nickname
  .field
    = f.label :password
    %br/
    = f.text_field :password
  .field
    = f.label :password_confirmation
    %br/
    = f.text_field :password_confirmation
  .field
    = f.label :role_id, "Role"
    %br/
    = f.collection_select :role_id, @roles, :id, :name
  .field
    = f.check_box :ex_member
    = f.label :ex_member
  .actions
    = f.submit
