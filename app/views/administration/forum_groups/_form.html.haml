= form_for([:administration, @forum_group]) do |f|
  - if @forum_group.errors.any?
    #error_explanation
      %h2
        = pluralize(@forum_group.errors.count, "error")
        prohibited this forum_group from being saved:
      %ul
        - @forum_group.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
