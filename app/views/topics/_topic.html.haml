.posting
  .author
    Author:#{topic.author.nickname}#{image_tag topic.author.profile.avatar.url}
    .timestamp
      at #{l topic.created_at, :format => :short}
  .content
    .header
      %h2
        = "Locked: " if topic.locked
        = "Sticky: " if topic.sticky
        = link_to topic.title, topic
      .navigation= link_to("Edit", edit_topic_url(topic), :class => "navbutton") if topic.author == current_user && !topic.locked
    .body= raw topic.body_html
    .clear.signature= raw topic.author.profile.signature_html
  .footer &nbsp;
