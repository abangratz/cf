= form_for @subscription do |f|
  -if @subscription.errors.any?
    #error_explanation
      %h2= "#{pluralize(@subscription.errors.count, "error")} prohibited this subscription from being saved:"
      %ul
        - @subscription.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :primary_role
    = f.text_field :primary_role
  .field
    = f.label :secondary_role
    = f.text_field :secondary_role
  .field
    = f.label :tertiary_role
    = f.text_field :tertiary_role
  .field
    = f.label :created_at
    = f.datetime_select :created_at
  .field
    = f.label :updated_at
    = f.datetime_select :updated_at
  .field
    = f.label :commitment
    = f.text_field :commitment
  .actions
    = f.submit 'Save'
